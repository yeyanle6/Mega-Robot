<?xml version="1.0"?>
<robot name="mid360_lidar" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="mid360_lidar" params="parent *origin name:=mid360">
    
    <!-- MID360 base link -->
    <joint name="${name}_joint" type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="${name}_base_link" />
    </joint>

    <link name="${name}_base_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.265" />
        <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" 
          ixy="0.0" iyz="0.0" ixz="0.0" />
      </inertial>
      <!-- Cylindrical base -->
      <visual>
        <origin xyz="0 0 -0.007" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.0277" length="0.015" />
        </geometry>
        <material name="black" />
      </visual>
      <!-- Hemispherical top -->
      <visual>
        <origin xyz="0 0 0.0075" rpy="0 0 0" />
        <geometry>
          <sphere radius="0.0277" />
        </geometry>
        <material name="black" />
      </visual>
      <!-- Collision geometry - simplified cylinder -->
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.0277" length="0.028" />
        </geometry>
      </collision>
    </link>

    <!-- LiDAR frame for point cloud data -->
    <joint name="${name}_lidar_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="${name}_base_link" />
      <child link="${name}_lidar" />
    </joint>

    <link name="${name}_lidar" />

    <!-- IMU frame for inertial data -->
    <joint name="${name}_imu_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="${name}_base_link" />
      <child link="${name}_imu" />
    </joint>

    <link name="${name}_imu" />

  </xacro:macro>
</robot>